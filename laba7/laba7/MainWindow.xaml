<Window x:Class="laba7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:laba7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Исходный массив:" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBlock x:Name="OriginalArrayTextBlock" Grid.Row="1" Margin="10,0,0,10"/>

        <Button x:Name="ShiftButton" Grid.Row="2" Content="Сдвинуть влево" 
                Click="ShiftButton_Click" Padding="5" Margin="0,10"/>

        <TextBlock Grid.Row="3" Text="Массив после сдвига:" FontWeight="Bold" Margin="0,10,0,5"/>
        <TextBlock x:Name="ShiftedArrayTextBlock" Grid.Row="4" Margin="10,0,0,0"/>
    </Grid>
</Window>
