        xmlns:local="clr-namespace:laba11"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas x:Name="MainCanvas" ClipToBounds="True">
        <!-- Дерево на заднем плане -->
        <Path Fill="SaddleBrown" Data="M 100,500 L 100,300 A 1,1 0 0 1 120,300 L 120,500 Z"/>
        <Path Fill="ForestGreen" Data="M 50,300 Q 110,150 170,300 T 290,300 T 410,300 Q 470,150 530,300 L 530,350 Q 470,200 410,350 T 290,350 T 170,350 Q 110,200 50,350 Z"/>
    </Canvas>
</Window>
